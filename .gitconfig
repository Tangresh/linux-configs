[color]
	ui = auto
[core]
	editor = emacs -nw
	quotepath = false
[log]
	date = local
[alias]
	la = "!git config -l | grep ^alias. | cut -c 7-"
	sci = svn dcommit --no-rebase
	ai = add -i
	br = branch
	cia = commit --amend
	ci = commit
	co = checkout
	co1 = checkout HEAD^
	co2 = checkout HEAD^^
	cp = cherry-pick
	done = !git-done
	ff = merge --ff
	fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@ | sed \"s/fixup\\! //\")\"' -
	ign = ls-files -o -i --exclude-standard
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	rb = rebase --preserve-merges
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive --autosquash
	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD^^
	rh = reset --hard
	s = status -sb
	st = status
	start = !git-start
	wdiff = diff --word-diff --word-diff-regex=[^[:space:].]
[merge]
	ff = false
	conflictstyle = diff3
[pull]
	rebase = preserve
[push]
	default = upstream
[svn]
	rmdir = true
[tig]
	tab-size = 4
	line-graphics = utf-8
	show-date = local
[tig "color"]
	date = magenta default
	diff-stat = yellow default
[tig "bind"]
	main = T !git tag %(prompt) %(commit)
[workflow]
	upstream = origin/master
	tracking = master
[user]
	name = Dominik Menzi
	email = dmenzi@tangresh.ch
